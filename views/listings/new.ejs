<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">

            <body>
                <h3>You are Creating a New Listing</h3>
                <br>
                <form method="POST" action="/listings" novalidate class="needs-validation">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input class="form-control" name="list[title]" placeholder="Enter title" type="text" required>
                        <div class="valid-feedback">Title looks Good</div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <input class="form-control" name="list[description]" placeholder="Enter Description" type="text"
                            required>
                            <div class="invalid-feedback">Description needs to be valid</div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-5">
                            <label for="price" class="form-label">Price</label>
                            <input class="form-control" name="list[price]" placeholder="Enter Price" 
                                required>
                                <div class="invalid-feedback">Price needs to be valid</div>
                        </div>
                        <div class="mb-3 col-md-7">
                            <label for="country" class="form-label">Country</label>
                            <input class="form-control" name="list[country]" placeholder="Enter country" type="text"
                                required>
                                <div class="invalid-feedback">Country needs to be valid</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label"> Location</label>
                        <input class="form-control" name="list[location]" placeholder="Enter location" type="text"
                            required>
                            <div class="invalid-feedback">Location needs to be valid</div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Image URL</label>
                        <input class="form-control" name="list[image][url]" placeholder="Enter Image URL" type="text">
                        <div class="invalid-feedback">Image URL needs to be valid</div>
                    </div>
                    <br>
                    <button class="btn btn-dark add-btn mt-3">Add </button> <br> <br>
                </form>
            </body>
        </div>
    </div>
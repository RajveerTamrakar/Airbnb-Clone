<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">

            <body>
                <h3>You are going to edit listing</h3>
                <form method="POST" action="/listings/<%=list._id%>?_method=PUT" novalidate class="needs-validation">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input name="list[title]" value="<%=list.title%>" type="text" class="form-control" required>
                        <div class="valid-feedback">Title looks Good</div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <input name="list[description]" value="<%=list.description%>" type="text" class="form-control"
                            required>
                        <div class="invalid-feedback">Description needs to be valid</div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-5">
                            <label for="price" class="form-label">Price</label>
                            <input name="list[price]" value="<%=list.price%>" type="number" class="form-control"
                                required>
                            <div class="invalid-feedback">Price needs to be valid</div>
                        </div>
                        <div class="mb-3 col-md-7">
                            <label for="country" class="form-label">Country</label>
                            <input name="list[country]" value="<%=list.country%>" type="text" class="form-control"
                                required>
                            <div class="invalid-feedback">Country needs to be valid</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label"> Location</label>
                        <input name="list[location]" value="<%=list.location%>" type="text" class="form-control"
                            required>
                        <div class="invalid-feedback">Location needs to be valid</div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Image URL</label>
                        <input name="list[image]" value="<%=list.image.url%>" type="text" class="form-control" required>
                        <div class="invalid-feedback">Image URL needs to be valid</div>
                    </div>
                    <button class="btn btn-dark edit-btn mt-3">Edit</button> <br> <br>
                </form>
            </body>
        </div>
    </div>
    <script src="/js/script.js"></script>